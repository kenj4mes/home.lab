# ===============================================================================
# SOVEREIGN AGENT - Environment Configuration
# Native Base DePIN
# 
# Copy this to .env and fill in your values
# NEVER commit .env with real credentials!
# ===============================================================================

# =============================================================================
# IDENTITY
# =============================================================================
AGENT_NAME=MyAgent
AGENT_BASENAME=myagent.base.eth

# =============================================================================
# COINBASE AGENTKIT
# Get keys from: https://portal.cdp.coinbase.com/
# =============================================================================
CDP_API_KEY_NAME=your-api-key-name
CDP_API_KEY_PRIVATE_KEY=your-private-key
NETWORK_ID=base-mainnet
# Use base-sepolia for testing

# =============================================================================
# OPENAI
# =============================================================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o

# =============================================================================
# FARCASTER / NEYNAR
# Get keys from: https://neynar.com/
# =============================================================================
NEYNAR_API_KEY=your-neynar-api-key
NEYNAR_SIGNER_UUID=your-signer-uuid
FARCASTER_FID=12345

# =============================================================================
# MEMORY (ChromaDB)
# =============================================================================
CHROMADB_HOST=localhost
CHROMADB_PORT=8000

# =============================================================================
# DEPIN SERVICES
# =============================================================================

# Fleek (Edge Compute)
# Get keys from: https://fleek.co/
FLEEK_API_KEY=your-fleek-api-key

# Mysterium (Bandwidth)
# Self-hosted node API
MYSTERIUM_API_KEY=optional

# Akash (Cloud Hosting)
# Wallet address for deployments
AKASH_WALLET_ADDRESS=akash1...

# =============================================================================
# XMTP (Messaging)
# =============================================================================
XMTP_ENV=production
# Use 'dev' for testing

# =============================================================================
# SURVIVAL THRESHOLDS
# =============================================================================
MIN_USDC_BALANCE=10.0
YIELD_THRESHOLD=100.0

# =============================================================================
# OPERATIONAL
# =============================================================================
OODA_INTERVAL=60
DAILY_CHORE_HOUR=6

# =============================================================================
# SAFETY TOGGLES (CRITICAL - READ CAREFULLY)
# =============================================================================
# These control dangerous autonomous operations
# ALL default to OFF (false) for safety

# Enable self-modification (agent reads/analyzes own code)
ENABLE_EVOLUTION=false

# Enable spawning child agents (costs real money)
ENABLE_REPRODUCTION=false

# Enable automatic code deployment (DANGEROUS - requires evolution enabled)
ENABLE_AUTO_DEPLOY=false

# Require human approval for code changes (recommended: true)
EVOLUTION_REQUIRE_APPROVAL=true

# =============================================================================
# HARDWARE (Optional)
# =============================================================================
# Iridium Satellite
IRIDIUM_IMEI=
IRIDIUM_PORT=/dev/ttyUSB0

# LoRa Mesh
LORA_PORT=/dev/ttyUSB1

# =============================================================================
# MONITORING
# =============================================================================
GRAFANA_PASSWORD=admin

# Tailscale VPN
TAILSCALE_AUTHKEY=tskey-auth-...

# =============================================================================
# ETHEREUM RPC (for Hubble/Farcaster)
# =============================================================================
ETH_RPC_URL=https://mainnet.base.org

# Hubble Farcaster Node
HUBBLE_ID=optional-hubble-node-id
