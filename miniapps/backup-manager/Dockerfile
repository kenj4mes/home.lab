FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y curl docker.io zstd && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ ./src/

EXPOSE 5501

CMD ["python", "-m", "uvicorn", "src.manager:app", "--host", "0.0.0.0", "--port", "5501"]
