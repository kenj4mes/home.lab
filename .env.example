# ═══════════════════════════════════════════════════════════════
# ⚙️ home.lab - Environment Configuration Template
# Copy to .env and fill in your values
# ═══════════════════════════════════════════════════════════════

# ───────────────────────────────────────────────────────────────
# Core Settings
# ───────────────────────────────────────────────────────────────
HOMELAB_ENV=development
HOMELAB_DOMAIN=homelab.local
HOMELAB_TIMEZONE=UTC

# ───────────────────────────────────────────────────────────────
# Database Credentials
# ───────────────────────────────────────────────────────────────
POSTGRES_PASSWORD=
POSTGRES_USER=homelab
POSTGRES_DB=homelab

MYSQL_ROOT_PASSWORD=
MYSQL_DATABASE=homelab

REDIS_PASSWORD=

# ───────────────────────────────────────────────────────────────
# Authentication
# ───────────────────────────────────────────────────────────────
JWT_SECRET=
SESSION_SECRET=
ADMIN_PASSWORD=
ADMIN_EMAIL=

# OAuth (optional)
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=

# ───────────────────────────────────────────────────────────────
# AI Services
# ───────────────────────────────────────────────────────────────
# OpenAI (optional, for external API)
OPENAI_API_KEY=

# Anthropic (optional, for external API)
ANTHROPIC_API_KEY=

# HuggingFace (optional, for model downloads)
HUGGINGFACE_TOKEN=

# ───────────────────────────────────────────────────────────────
# Notifications
# ───────────────────────────────────────────────────────────────
# Slack
SLACK_WEBHOOK_URL=

# Discord (optional)
DISCORD_WEBHOOK_URL=

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# PagerDuty (optional)
PAGERDUTY_URL=
PAGERDUTY_KEY=

# ───────────────────────────────────────────────────────────────
# External Integrations
# ───────────────────────────────────────────────────────────────
# GitHub
GITHUB_WEBHOOK_SECRET=

# Docker Hub
DOCKERHUB_WEBHOOK_SECRET=

# ───────────────────────────────────────────────────────────────
# Storage & Backup
# ───────────────────────────────────────────────────────────────
BACKUP_ENCRYPTION_KEY=
BACKUP_RETENTION_DAYS=30

# Remote backup (optional)
REMOTE_BACKUP_ENABLED=false
REMOTE_BACKUP_PATH=

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=

# ───────────────────────────────────────────────────────────────
# Monitoring
# ───────────────────────────────────────────────────────────────
# Grafana
GRAFANA_ADMIN_PASSWORD=

# ───────────────────────────────────────────────────────────────
# Energy Monitoring (optional)
# ───────────────────────────────────────────────────────────────
ELECTRICITY_RATE=0.12
CARBON_INTENSITY=0.4

# ───────────────────────────────────────────────────────────────
# Network
# ───────────────────────────────────────────────────────────────
# SSL/TLS
ACME_EMAIL=
DOMAIN_NAME=

# Cloudflare (optional)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=

# ───────────────────────────────────────────────────────────────
# Feature Flags
# ───────────────────────────────────────────────────────────────
ENABLE_AI_ORCHESTRATOR=true
ENABLE_ENERGY_MONITORING=false
ENABLE_REMOTE_BACKUP=false
ENABLE_EXTERNAL_AI=false
